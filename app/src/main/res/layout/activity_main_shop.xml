<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainShop">

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff" >


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/rowContainer01">

                    <ImageView
                        android:id="@+id/image01"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/tshirt"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/product01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:text="@string/tshirt_a_name"
                        android:layout_alignParentTop="true"
                        android:layout_alignLeft="@+id/description01"
                        android:layout_alignStart="@+id/description01" />

                    <TextView
                        android:id="@+id/price01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="@string/tshirt_a_price"
                        android:textSize="12dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/product01"
                        android:layout_toEndOf="@+id/product01" />

                    <TextView
                        android:id="@+id/description01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp"
                        android:layout_below="@+id/product01"
                        android:layout_toRightOf="@+id/image01"
                        android:text="@string/tshirt_a_description" />
                </RelativeLayout>
            </TableRow>

        </TableLayout>

    </RelativeLayout>

</RelativeLayout>
